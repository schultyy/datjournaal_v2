<div class="tiles">
  <%= for post <- @posts do %>
    <div class="tile">
      <%= link to: post_path(@conn, :show, post.slug) do %>
        <img src="<%= photo_url(post) %>" />
        <div class="meta">
          <div class="author">
            <%= post.user.name %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>