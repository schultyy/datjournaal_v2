<div class="tiles">
  <%= for post <- @posts do %>
    <div class="tile">
      <%= link to: post_path(@conn, :show, post.slug) do %>
        <img src="<%= photo_url(post) %>" />
        <div class="meta">
          <div class="meta-item location">
            <%= if post.short_location_name do %>
              <i class="fa fa-map-marker" aria-hidden="true"></i>
              <%= post.short_location_name %>
            <% end %>
          </div>
          <div class="meta-item author">
            <%= post.user.name %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
